#add-expense-modal.modal
	h4 Ajouter une dépense
	form(action="/expenses", method="POST")
		.field.label
			input(type="text", name="name", required)
			label Nom
		.field.label.suffix
			select(name="type")
				each expenseType in types
					option= expenseType
			label Type
			i arrow_drop_down
		.field.label
			input(type="number", name="amount", step="0.01", required)
			label Montant
		.field.label.suffix
			input(type="date", name="date", required)
			label Date
			i today
		.field.label.suffix
			select(name="category")
				each category in categories
					option(value=category.id)= category.name
			label Catégorie
			i arrow_drop_down
		.field.label
			label.checkbox
				input(type="checkbox", name="isRecurrent", value="true")
				span Récurrent
		nav.right-align
			button.border(type="button", data-ui="#add-expense-modal") Annuler
			button(type="submit") Ajouter
